<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:keepScreenOn="true">
    <RelativeLayout
        android:id="@+id/displayRecipeBaseLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/exitRecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_keyboard_backspace_black_18dp"
            android:background="@null"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp" />
        
        <ImageView
            android:id="@+id/recipeImageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp">
        </ImageView>

        <TextView
            android:id="@+id/recipeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/recipeImageView"
            android:layout_marginTop="30dp">

        </TextView>

        <TextView
            android:id="@+id/recipeDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/recipeTitle"
            android:layout_marginTop="30dp">

        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ingredientsListRecycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/recipeDescription"
            android:layout_marginTop="30dp">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/recipeInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ingredientsListRecycleView"
            android:layout_marginTop="30dp">

        </TextView>


        
    </RelativeLayout>
    

    

</ScrollView>